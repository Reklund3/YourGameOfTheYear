@model IEnumerable<Game>

<div class="col-md-3 col-md-offset-2">
    <h2 class="text-center">Recommended</h2>
    <table class="table table-condensed">
        <tr>
            <th>Game</th>
            <th>Rating</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.GameName
                </td>
                <td>
                    @item.GameRating
                </td>
            </tr>
        }
    </table>
</div>
